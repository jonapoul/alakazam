<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Core" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- AlertDialog -->
        <item name="materialAlertDialogTheme">@style/Theme.Core.AlertDialog</item>
        <item name="alertDialogTheme">@style/Theme.Core.AlertDialog</item>
        <item name="android:alertDialogTheme">@style/Theme.Core.AlertDialog</item>
        <item name="android:dialogTheme">@style/Theme.Core.AlertDialog</item>

        <!-- CardView -->
        <item name="materialCardViewStyle">@style/Theme.Core.CardView</item>
        <item name="cardViewStyle">@style/Theme.Core.CardView</item>

        <!-- EditText -->
        <item name="android:editTextStyle">@style/Theme.Core.EditText</item>
        <item name="editTextStyle">@style/Theme.Core.EditText</item>

        <!-- Button -->
        <item name="materialButtonStyle">@style/Theme.Core.Button</item>
    </style>

    <style name="Theme.Core.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="Theme.Core.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />

    <style name="Theme.Core.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/cardBackground</item>
        <item name="cardCornerRadius">@dimen/small</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="contentPadding">@dimen/medium</item>
        <item name="cardElevation">@dimen/small</item>
    </style>

    <style name="Theme.Core.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:imeOptions">flagNoPersonalizedLearning</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

    <style name="Theme.Core.Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Theme.Core.Text.Title" parent="Theme.Core.Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Theme.Core.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.Core.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Core.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">?attr/colorAccent</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Theme.Core.Button.Text.Warning" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/onSurfaceRed</item>
    </style>

    <style name="Theme.Core.Button.Text.Caution" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/onSurfaceOrange</item>
    </style>

    <style name="Theme.Core.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarNegativeButtonStyle">@style/Theme.Core.Button.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Theme.Core.Button.Text</item>
        <item name="buttonBarNeutralButtonStyle">@style/Theme.Core.Button.Text</item>
        <item name="buttonBarButtonStyle">@style/Theme.Core.Button.Text</item>
        <item name="materialAlertDialogTitleTextStyle">@style/Theme.Core.AlertDialog.Text</item>
        <item name="textColorAlertDialogListItem">?attr/colorOnSurface</item>
        <item name="android:textColorAlertDialogListItem">?attr/colorOnSurface</item>
        <item name="materialAlertDialogTitleIconStyle">@style/Theme.Core.AlertDialog.Icon</item>
    </style>

    <style name="Theme.Core.AlertDialog.Text" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Theme.Core.AlertDialog.Icon" parent="MaterialAlertDialog.MaterialComponents.Title.Icon">
        <item name="android:tint">?attr/colorAccent</item>
    </style>

    <style name="Theme.Core.AlertDialog.Warning" parent="Theme.Core.AlertDialog">
        <item name="materialAlertDialogTitleTextStyle">
            @style/Theme.Core.AlertDialog.Text.Warning
        </item>
        <item name="materialAlertDialogTitleIconStyle">
            @style/Theme.Core.AlertDialog.Icon.Warning
        </item>
        <item name="buttonBarButtonStyle">@style/Theme.Core.Button.Text.Warning</item>
        <item name="buttonBarNegativeButtonStyle">@style/Theme.Core.Button.Text.Warning</item>
        <item name="buttonBarPositiveButtonStyle">@style/Theme.Core.Button.Text.Warning</item>
        <item name="buttonBarNeutralButtonStyle">@style/Theme.Core.Button.Text.Warning</item>
    </style>

    <style name="Theme.Core.AlertDialog.Caution" parent="Theme.Core.AlertDialog">
        <item name="materialAlertDialogTitleTextStyle">
            @style/Theme.Core.AlertDialog.Text.Caution
        </item>
        <item name="materialAlertDialogTitleIconStyle">
            @style/Theme.Core.AlertDialog.Icon.Caution
        </item>
        <item name="buttonBarButtonStyle">@style/Theme.Core.Button.Text.Caution</item>
        <item name="buttonBarNegativeButtonStyle">@style/Theme.Core.Button.Text.Caution</item>
        <item name="buttonBarPositiveButtonStyle">@style/Theme.Core.Button.Text.Caution</item>
        <item name="buttonBarNeutralButtonStyle">@style/Theme.Core.Button.Text.Caution</item>
    </style>

    <style name="Theme.Core.AlertDialog.Text.Warning" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/onSurfaceRed</item>
    </style>

    <style name="Theme.Core.AlertDialog.Icon.Warning" parent="MaterialAlertDialog.MaterialComponents.Title.Icon">
        <item name="android:tint">@color/onSurfaceRed</item>
    </style>

    <style name="Theme.Core.AlertDialog.Text.Caution" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/onSurfaceOrange</item>
    </style>

    <style name="Theme.Core.AlertDialog.Icon.Caution" parent="MaterialAlertDialog.MaterialComponents.Title.Icon">
        <item name="android:tint">@color/onSurfaceOrange</item>
    </style>
</resources>
