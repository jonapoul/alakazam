<resources>

  <style name="Theme.Atak.Common" parent="@android:style/Theme.Holo">
    <item name="android:buttonStyle">@style/Theme.Atak.Common.Button</item>
    <item name="android:imageButtonStyle">@style/Theme.Atak.Common.ImageButton</item>
    <item name="android:buttonStyleToggle">@style/Theme.Atak.Common.Button</item>
    <item name="android:spinnerStyle">@style/Theme.Atak.Common.Spinner</item>
    <item name="android:spinnerItemStyle">@style/Theme.Atak.Common.Spinner.Item</item>
    <item name="android:editTextStyle">@style/Theme.Atak.Common.EditText</item>
    <item name="android:colorControlNormal">@color/white</item>
  </style>

  <style name="Theme.Atak.Common.Spinner" parent="@android:style/Widget.Spinner">
    <item name="android:spinnerMode">dialog</item>
  </style>

  <style name="Theme.Atak.Common.EditText" parent="@android:style/Widget.EditText">
    <!-- Default to non-multi-line edit texts? Probably should do this field-by-field, but we've missed a LOT of them!  -->
    <!-- <item name="inputType">text</item> -->
    <item name="android:imeOptions">flagNoFullscreen</item>
  </style>

  <style name="Theme.Atak.Common.Spinner.Item" parent="@style/Theme.Atak.Common">
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="Theme.Atak.Common.Button" parent="@android:style/Widget.Button">
    <item name="android:background">@drawable/button_selector</item>
    <item name="android:shadowColor">@color/darker_grey</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">2</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
    <item name="android:paddingTop">0dp</item>
    <item name="android:paddingBottom">3dp</item>
    <item name="android:textSize">@dimen/text_size_normal</item>
    <item name="android:padding">6dp</item>
  </style>

  <style name="Theme.Atak.Common.ImageButton" parent="@android:style/Widget.ImageButton">
    <item name="android:background">@drawable/button_selector</item>
    <item name="android:shadowColor">@color/darker_grey</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">2</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
    <item name="android:paddingTop">0dp</item>
    <item name="android:paddingBottom">3dp</item>
    <item name="android:textSize">@dimen/text_size_normal</item>
    <item name="android:padding">6dp</item>
  </style>

  <style name="Divider">
    <item name="android:background">?android:attr/listDivider</item>
  </style>

  <style name="Divider.Horizontal" parent="Divider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
  </style>

  <style name="Divider.Vertical" parent="Divider">
    <item name="android:layout_width">1dp</item>
    <item name="android:layout_height">match_parent</item>
  </style>
</resources>
